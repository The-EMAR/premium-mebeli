{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% if section.settings.catalog_link != blank %}
  <section class="section-catalog-download section-{{ section.id }}-padding">
    <div class="page-width">
      <a class="button" href="{{ section.settings.catalog_link }}" download="download">Изтегли каталог</a>
    </div><!-- /.page-width -->
  </section><!-- /.section-catalog-download -->
{% endif %}

{% schema %}
  {
  "name": "Catalog download",
  "settings": [
    {
      "type": "url",
      "id": "catalog_link",
      "label": "Catalog Link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Catalog download"
    }
  ]
}  
{% endschema %}